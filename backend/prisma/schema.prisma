generator client {
  provider = "prisma-client"
  // Generate into the default top-level location so require('@prisma/client') can load the generated runtime
  output   = "../../backend/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  passwordHash  String
  name          String?
  avatarUrl     String?
  bio           String?
  createdAt     DateTime       @default(now())
  kpis          KPI[]
  friendsSent   Friend[]       @relation("sent")
  friendsRecv   Friend[]       @relation("recv")
  memberships   GroupMember[]
  activities    Activity[]
  points        Int            @default(0)
  activityLikes ActivityLike[]
  kpilogs       KPILog[]
}

model Friend {
  id        Int          @id @default(autoincrement())
  requester Int
  receiver  Int
  status    FriendStatus @default(PENDING)
  createdAt DateTime     @default(now())

  requesterUser User @relation("sent", fields: [requester], references: [id])
  receiverUser  User @relation("recv", fields: [receiver], references: [id])
}

model Group {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())

  members   GroupMember[]
  groupKpis KPI[]
}

model GroupMember {
  id       Int       @id @default(autoincrement())
  groupId  Int
  userId   Int
  points   Int       @default(0)
  role     GroupRole @default(MEMBER)
  joinedAt DateTime  @default(now())

  group Group @relation(fields: [groupId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@unique([groupId, userId])
}

model Activity {
  id        Int            @id @default(autoincrement())
  userId    Int
  targetId  Int?
  type      ActivityType
  payload   Json?
  createdAt DateTime       @default(now())
  user      User           @relation(fields: [userId], references: [id])
  likes     ActivityLike[]
}

model ActivityLike {
  id         Int      @id @default(autoincrement())
  activityId Int
  userId     Int
  activity   Activity @relation(fields: [activityId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([activityId, userId])
}

model KPI {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  type        KPIType
  scope       KPIScope
  
  userId      Int?
  groupId     Int?

  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())

  tasks       KPITask[]

  user        User?   @relation(fields: [userId], references: [id])
  group       Group?  @relation(fields: [groupId], references: [id])

  @@index([scope])
  @@index([userId])
  @@index([groupId])
}


model KPITask {
  id        Int      @id @default(autoincrement())
  kpiId     Int
  name      String
  order     Int?
  isActive  Boolean  @default(true)

  scope     KPIScope
  groupId   Int?

  kpi       KPI      @relation(fields: [kpiId], references: [id])
  logs      KPILog[]

  @@index([kpiId])
  @@index([scope])
  @@index([groupId])
}



model KPILog {
  id         Int       @id @default(autoincrement())
  kpiTaskId  Int
  userId     Int

  scope      KPIScope
  groupId    Int?

  completed  Boolean
  loggedAt   DateTime  @default(now())

  task       KPITask   @relation(fields: [kpiTaskId], references: [id])
  user       User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([groupId])
  @@index([scope])
  @@index([kpiTaskId])
}



enum KPIType {
  DAILY
  WEEKLY
  MONTHLY
}

enum KPIScope {
  PERSONAL
  GROUP
}

enum FriendStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum ActivityType {
  KPI_LOG
  KPI_CREATED
  KPI_COMPLETED
  LIKE
  JOIN_GROUP
  LEAVE_GROUP
}

enum GroupRole {
  ADMIN
  MEMBER
}
